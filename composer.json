{
    "name": "ianm/log-viewer",
    "description": "Easily view your Flarum logfiles from within the admin interface",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "IanM",
            "email": "ian@morland.dev",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "IanM\\LogViewer\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Log Viewer",
            "category": "feature",
            "icon": {
                "name": "far fa-file-alt",
                "color": "#0072e3",
                "backgroundColor": "#fff"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": false,
                "js": true,
                "jsCommon": false,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": true,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
